<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textQuoteRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/buttonEditQuote"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:typeface="monospace"
        android:textColor="@color/black">
    </TextView>

    <ImageButton
        android:id="@+id/buttonEditQuote"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/buttonDeleteQuote"
        android:src="@drawable/icon_settings"
        android:background="@drawable/round_button_bg"
        android:contentDescription="@string/button_edit_description"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" >
    </ImageButton>

    <ImageButton
        android:id="@+id/buttonDeleteQuote"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_delete"
        android:background="@drawable/round_button_bg"
        android:contentDescription="@string/button_delete_description"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" >
    </ImageButton>

</RelativeLayout>